# =============================================================================
# Kyra AI - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_URL=http://localhost:3000
GATEWAY_PORT=18789

# -----------------------------------------------------------------------------
# AI Providers
# -----------------------------------------------------------------------------
# Anthropic (Claude) - Primary
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI (GPT-4) - Fallback
OPENAI_API_KEY=sk-xxxxx

# Google (Gemini) - Fallback
GOOGLE_API_KEY=xxxxx

# -----------------------------------------------------------------------------
# Stripe Billing
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_SOLO=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_BUSINESS=price_xxxxx

# -----------------------------------------------------------------------------
# Telegram
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=xxxxx:xxxxx

# -----------------------------------------------------------------------------
# Database (Production)
# -----------------------------------------------------------------------------
# PostgreSQL connection string (Neon, Supabase, etc.)
DATABASE_URL=postgresql://user:password@host:5432/kyra?sslmode=require

# -----------------------------------------------------------------------------
# Redis (Production)
# -----------------------------------------------------------------------------
REDIS_URL=redis://default:xxxxx@host:6379

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Gateway authentication token
GATEWAY_TOKEN=your-secure-token-here

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-session-secret-here

# Encryption key for stored data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-encryption-key-here

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
# Enable verbose logging
DEBUG=kyra:*

# Skip channel connections during development
OPENCLAW_SKIP_CHANNELS=1
