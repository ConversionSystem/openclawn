{
  "name": "assistant",
  "version": "0.1.0",
  "private": true,
  "description": "AI Personal Assistant MVP - Clean, Streamlined Architecture",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:generate": "pnpm --filter @assistant/api db:generate",
    "db:migrate": "pnpm --filter @assistant/api db:migrate",
    "db:studio": "pnpm --filter @assistant/api db:studio",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  }
}
