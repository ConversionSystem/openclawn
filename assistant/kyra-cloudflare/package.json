{
  "name": "kyra-ai-cloudflare",
  "version": "1.0.0",
  "description": "Kyra AI - Your Intelligent Companion (Cloudflare Workers Deployment)",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:json": "wrangler tail --format=json",
    
    "setup": "npm run setup:r2 && npm run setup:kv && echo 'Setup complete! Now run: npm run setup:secrets'",
    "setup:r2": "wrangler r2 bucket create kyra-data || echo 'Bucket may already exist'",
    "setup:kv": "wrangler kv:namespace create KYRA_CONFIG",
    "setup:secrets": "npm run secret:anthropic && npm run secret:stripe && npm run secret:stripe-webhook && npm run secret:gateway",
    
    "secret:anthropic": "wrangler secret put ANTHROPIC_API_KEY",
    "secret:stripe": "wrangler secret put STRIPE_SECRET_KEY",
    "secret:stripe-webhook": "wrangler secret put STRIPE_WEBHOOK_SECRET",
    "secret:gateway": "wrangler secret put MOLTBOT_GATEWAY_TOKEN",
    "secret:telegram": "wrangler secret put TELEGRAM_BOT_TOKEN",
    "secret:discord": "wrangler secret put DISCORD_BOT_TOKEN",
    "secret:access-team": "wrangler secret put CF_ACCESS_TEAM_DOMAIN",
    "secret:access-aud": "wrangler secret put CF_ACCESS_AUD",
    "secret:list": "wrangler secret list",
    
    "r2:list": "wrangler r2 bucket list",
    "kv:list": "wrangler kv:namespace list",
    
    "test": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@cloudflare/sandbox": "^0.1.0",
    "hono": "^4.6.0",
    "stripe": "^14.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260129.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.100.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "kyra",
    "ai",
    "assistant",
    "openclaw",
    "cloudflare",
    "workers"
  ],
  "author": "Kyra AI Team",
  "license": "MIT"
}
